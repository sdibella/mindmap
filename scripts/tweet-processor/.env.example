# AI Provider Configuration
# Options: 'gemini' or 'claude'
AI_PROVIDER=gemini

# Google AI API Key (for Gemini)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic API Key (for Claude - optional, for future use)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Obsidian Vault Path
# Default: ~/Library/Mobile Documents/iCloud~md~obsidian/Documents/StefanEternal
# Override if your vault is in a different location
VAULT_PATH=/Users/gw/Library/Mobile Documents/iCloud~md~obsidian/Documents/StefanEternal

# Confidence Threshold (0.0 - 1.0)
# Tweets with confidence below this threshold are routed to "00 - Inbox/Tweets to Review" for manual review
# Default: 0.7 (recommended range: 0.6 - 0.8)
CONFIDENCE_THRESHOLD=0.7

# Auto-Research Configuration
# Enable/disable automatic web search for tweet content
# Set to 'false' to disable auto-research feature
# Default: true
ENABLE_AUTO_RESEARCH=true

# Google Custom Search Engine ID (required for auto-research)
# Create a Custom Search Engine at: https://programmablesearchengine.google.com/
# Leave empty to disable web search (will skip research)
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Maximum number of search results to fetch
# Default: 5 (recommended range: 3 - 10)
MAX_RESEARCH_RESULTS=5

# Research relevance threshold (0.0 - 1.0)
# Only include research results with AI-rated relevance above this score
# Default: 0.6 (recommended range: 0.5 - 0.8)
RESEARCH_RELEVANCE_THRESHOLD=0.6
